<section class="product-info background-color">
  <div class="container pt-5">
    <div class="row d-flex justify-content-around">
      <div class="card col-10 col-md-5 m-3">
        <div class="card-header bg-warning">
          <h3 class="text-center display-4">Producto</h3>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <h4><%= @demand.name %></h4>
          </li>
          <li class="list-group-item">
            <h4><%= @demand.quantity %> KG</h4>
          </li>
          <li class="list-group-item">
            <h4><%= @demand.location %></h4>
          </li>
        </ul>
        <div class="card-body d-flex flex-column ">
          <%= link_to "Demandas", demands_path, class: "btn btn-secondary btn-sm m-1" %>

          <% if user_signed_in? && (current_user.id == @demand.user_id) %>
            <%= link_to "Editar Demanda", edit_demand_path(@demand), class: "btn btn-primary btn-sm m-1" %>
            <%= link_to "Destruir Demanda", demand_path(@demand), method: :delete, data: { confirm: "Estas seguro?" }, class: "btn btn-danger btn-sm m-1" %>
          <% end %>
        </div>
      </div>

      <div class="card col-10 col-md-5 m-3">
        <div class="card-header bg-warning">
          <h3 class="text-center display-4">Contacto</h3>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <h3><%= @demand.user.email %></h3>
          </li>
          <li class="list-group-item">
            <h3>Empresa: <%= @demand.user.company %></h3>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>
