<div class="row d-flex justify-content-center align-items-center pt-4">
  <div class="col-10 col-sm-8 col-lg-6">
    <div class="card">
      <div class="card-body">
        <h2 class="card-title text-center">Olvido contrase√±a?</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "form-group") do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "Enviar instrucciones", class: "btn btn-primary w-100 mt-3" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
