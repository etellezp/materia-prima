<%= form_for @supply, class: "form-group" do |f| %>
  <%= f.label :Nombre  %>
  <%= f.text_field :name, required: true, class: "form-control" %> <br>

  <%= f.label :Cantidad %>
  <%= f.number_field :quantity, class: :text_field, step: :any, required: true, class: "form-control" %> <br>

  <%= f.label :Precio_en_dolares_americanos %>
  <%= f.number_field :price, class: :text_field, step: :any, required: true, class: "form-control" %> <br>

  <%= f.label :Ubicacion  %>
  <%= f.text_field :location, required: true, class: "form-control" %> <br>

  <%= f.submit "Agregar producto", class: "btn btn-primary" %>

<% end %>

<%= link_to "Ofertas", supplies_path %>
