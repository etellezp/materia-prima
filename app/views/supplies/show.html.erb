<section class="product-info background-color">
  <div class="container pt-5">
    <div class="row d-flex justify-content-around">
      <div class="card col-10 col-md-5 m-3">
        <div class="card-header bg-warning">
          <h3 class="text-center display-4">Producto</h3>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <h4><%= @supply.name %></h4>
          </li>
          <li class="list-group-item">
            <h4><%= @supply.quantity %> KG</h4>
          </li>
          <li class="list-group-item">
            <h4><%= number_to_currency(@supply.price) %></h4>
          </li>
          <li class="list-group-item">
            <h4><%= @supply.location %></h4>
          </li>
        </ul>
        <div class="card-body d-flex flex-column">
          <%= link_to "Ofertas", supplies_path, class: "btn btn-primary btn-sm m-1" %>
          <% if user_signed_in? && (current_user.id == @supply.user_id) %>
            <%= link_to "Editar Oferta", edit_supply_path(@supply), class: "btn btn-secondary btn-sm m-1" %>
            <%= link_to "Destruir Oferta", supply_path(@supply), method: :delete, data: { confirm: "Estas seguro?" }, class: "btn btn-danger btn-sm m-1" %>
          <% end %>
        </div>
      </div>

      <div class="card col-10 col-md-5 m-3">
        <div class="card-header bg-warning">
          <h3 class="text-center display-4">Contacto</h3>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <h3><%= @supply.user.email %></h3>
          </li>
          <li class="list-group-item">
            <h3>Empresa: <%= @supply.user.company %></h3>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>
